<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/all.css">
    <link rel="stylesheet" href="/admin.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400i,600,600i,700,700i" rel="stylesheet">
	<link rel="stylesheet" href="/imagePage.css">
	<title>Image Uploading</title>
</head>

<body>

	<div class="mx-auto bg-grey-400">
		<!--Screen-->
		<div class="min-h-screen flex flex-col">
			<!--Header Section Starts Here-->
			<%- include('../partials/header.ejs'); %>
			<!--/Header-->
			<%- include('../partials/smallbar.ejs'); %>
			<div class="flex flex-1">
				
				<!--Sidebar-->
				<%- include('../partials/side.ejs'); %>
				<!--/Sidebar-->
				<!--Main-->
				<main class="bg-white-300 flex-1 p-3 overflow-hidden">
	
					<div class="flex flex-col">
						<!-- Stats Row Starts Here -->
							<%- include('../partials/secondtop.ejs'); %>
						<div class="upload">
							<h1>To Upload Gym logo and its info</h1>
						<hr>
						    <div>
								<form action="/uploadgymlogo" method="POST" enctype="multipart/form-data">
									<div>
										<label for="image">Upload Image: </label>
										<input type="file" id="image"
											name="image" value="" required class="uploadimg">
									</div>
									<div class="discrip">
										<label for="desc">First Title</label>
										<textarea id="desc" name="firsttitle" value="" rows="2"
												placeholder="Description" required>
										</textarea>
									</div>
									<div class="discrip">
										<label for="desc">Second Title</label>
										<textarea id="desc" name="secondtitle" value="" rows="2"
												placeholder="Description" required>
										</textarea>
									</div>
									<div class="discrip">
										<label for="desc">Third Title</label>
										<textarea id="desc" name="thirdtitle" value="" rows="2"
												placeholder="Description" required>
										</textarea>
									</div>
									<div class="discrip">
										<label for="desc">Fouth Title</label>
										<textarea id="desc" name="fourthtitle" value="" rows="2"
												placeholder="Description" required>
										</textarea>
									</div>
									<div>
										<button type="submit">Submit</button>
									</div>
								</form>
						    </div>
						</div>
	
						<div class="retrive">
					
							<h1>Uploaded Gym Logos</h1>
							<hr>
							<div class="alluimages">
								<% items.forEach(function(image) { %>
									<div class="content">
										<div class="imgdetails">
											<img src="data:image/<%=image.img.contentType%>;base64,
												<%=image.img.data.toString('base64')%>">
										</div>
									</div>
									<% }) %>
							</div>
						</div>
				</main>
				<!--/Main-->
			</div>
	
		</div>
	</div>


	
</body>

</html>
